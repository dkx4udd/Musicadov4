<div class="banner-container">
  <div class="banner" 
       {% if section.settings.banner_image %}
         data-desktop-image="{{ section.settings.banner_image | image_url: width: 1920 }}"
         data-tablet-image="{{ section.settings.banner_image | image_url: width: 768 }}"
         data-mobile-image="{{ section.settings.banner_image | image_url: width: 480 }}"
       {% endif %}>
    {% unless section.settings.banner_text == blank or section.settings.banner_text == " " or section.settings.banner_text == "none" %}
      <h1>{{ section.settings.banner_text }}</h1>
    {% endunless %}
  </div>
</div>

{% schema %}
{
  "name": "Hero Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "banner_image",
      "label": "Banner Afbeelding",
      "info": "Aanbevolen afmeting: 1920x1080px. Als geen afbeelding is geselecteerd, wordt een standaard gradiÃ«nt achtergrond gebruikt."
    },
    {
      "type": "text",
      "id": "banner_text",
      "label": "Banner Tekst (optioneel)",
      "default": "none",
      "info": "Type 'none' of laat leeg om geen tekst weer te geven"
    },
    {
      "type": "range",
      "id": "banner_height",
      "min": 200,
      "max": 1100,
      "step": 50,
      "unit": "px",
      "label": "Banner Hoogte",
      "default": 600,
      "info": "Hoogte van de banner sectie"
    },
    {
      "type": "header",
      "content": "Overlay Instellingen"
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "min": 0,
      "max": 100,
      "step": 10,
      "unit": "%",
      "label": "Overlay Doorzichtigheid",
      "default": 60,
      "info": "Donkerheid van de overlay op de achtergrond afbeelding"
    }
  ],
  "presets": [
    {
      "name": "Hero Banner",
      "settings": {
        "banner_text": "none",
        "banner_height": 600,
        "overlay_opacity": 60
      }
    }
  ]
}
{% endschema %}

<style>
  .banner-container {
    width: 100%;
    overflow: hidden;
  }
  
  .banner-container .banner {
    height: {{ section.settings.banner_height }}px;
    text-align: center;
    display: flex;
    align-items: center;
    justify-content: center;
    background-size: cover;
    background-position: center center;
    background-repeat: no-repeat;
    width: 100%;
    border-radius: 24px;
    position: relative;
    overflow: hidden;
  }
  
  /* Set background image based on screen size */
  {% if section.settings.banner_image %}
    .banner-container .banner {
      background-image: linear-gradient(rgba(15, 23, 42, 0.6), rgba(30, 41, 59, 0.6)), url('{{ section.settings.banner_image | image_url: width: 1920 }}');
    }
  {% endif %}
  
  .banner-container .banner h1 {
    color: #ffffff;
    text-shadow: 2px 2px 8px rgba(0,0,0,0.6);
    font-size: 2.5rem;
    font-weight: 700;
    position: relative;
    z-index: 2;
  }
  
  {% if section.settings.banner_image %}
    .banner-container .banner::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: rgba(15, 23, 42, {{ section.settings.overlay_opacity | divided_by: 100.0 }});
      z-index: 1;
    }
  {% endif %}
  
  /* Tablet responsiveness */
  @media (max-width: 768px) {
    .banner-container .banner {
      height: 400px !important;
      {% if section.settings.banner_image %}
        background-image: linear-gradient(rgba(15, 23, 42, 0.6), rgba(30, 41, 59, 0.6)), url('{{ section.settings.banner_image | image_url: width: 768 }}') !important;
      {% endif %}
    }
    
    .banner-container .banner h1 {
      font-size: 1.8rem;
    }
  }
  
  /* Mobile responsiveness */
  @media (max-width: 480px) {
    .banner-container {
      padding: 0 10px;
    }
    
    .banner-container .banner {
      height: 250px !important;
      border-radius: 16px;
      {% if section.settings.banner_image %}
        background-image: linear-gradient(rgba(15, 23, 42, 0.6), rgba(30, 41, 59, 0.6)), url('{{ section.settings.banner_image | image_url: width: 480 }}') !important;
      {% endif %}
      background-size: cover !important;
      background-position: center center !important;
    }
    
    .banner-container .banner h1 {
      font-size: 1.4rem;
      padding: 0 1rem;
    }
  }
  
  /* Extra small mobile devices */
  @media (max-width: 360px) {
    .banner-container .banner {
      height: 200px !important;
    }
  }
</style>
