<div class="banner-container">
  <div class="banner">
    {% if section.settings.banner_image %}
      <img src="{{ section.settings.banner_image | image_url: width: 1920 }}" 
           srcset="{{ section.settings.banner_image | image_url: width: 480 }} 480w,
                   {{ section.settings.banner_image | image_url: width: 768 }} 768w,
                   {{ section.settings.banner_image | image_url: width: 1200 }} 1200w,
                   {{ section.settings.banner_image | image_url: width: 1920 }} 1920w"
           sizes="(max-width: 480px) 100vw, (max-width: 768px) 100vw, 100vw"
           alt="Hero banner"
           class="banner-image">
    {% endif %}
    <div class="banner-overlay"></div>
    {% unless section.settings.banner_text == blank or section.settings.banner_text == " " or section.settings.banner_text == "none" %}
      <h1>{{ section.settings.banner_text }}</h1>
    {% endunless %}
  </div>
</div>

{% schema %}
{
  "name": "Hero Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "banner_image",
      "label": "Banner Afbeelding",
      "info": "Aanbevolen afmeting: 1920x1080px. Als geen afbeelding is geselecteerd, wordt een standaard gradiÃ«nt achtergrond gebruikt."
    },
    {
      "type": "text",
      "id": "banner_text",
      "label": "Banner Tekst (optioneel)",
      "default": "none",
      "info": "Type 'none' of laat leeg om geen tekst weer te geven"
    },
    {
      "type": "range",
      "id": "banner_height",
      "min": 200,
      "max": 1100,
      "step": 50,
      "unit": "px",
      "label": "Banner Hoogte",
      "default": 600,
      "info": "Hoogte van de banner sectie"
    },
    {
      "type": "header",
      "content": "Overlay Instellingen"
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "min": 0,
      "max": 100,
      "step": 10,
      "unit": "%",
      "label": "Overlay Doorzichtigheid",
      "default": 60,
      "info": "Donkerheid van de overlay op de achtergrond afbeelding"
    }
  ],
  "presets": [
    {
      "name": "Hero Banner",
      "settings": {
        "banner_text": "none",
        "banner_height": 600,
        "overlay_opacity": 60
      }
    }
  ]
}
{% endschema %}

<style>
  /* Hero banner specific styles with higher specificity */
  .shopify-section .banner-container {
    width: 100%;
    overflow: hidden;
  }
  
  .shopify-section .banner-container .banner {
    height: {{ section.settings.banner_height }}px !important;
    text-align: center;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    border-radius: 24px;
    position: relative;
    overflow: hidden;
    margin-bottom: 0;
    background-color: #1e293b;
  }
  
  .shopify-section .banner-container .banner-image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }
  
  .shopify-section .banner-container .banner-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(rgba(15, 23, 42, {{ section.settings.overlay_opacity | divided_by: 100.0 }}), rgba(30, 41, 59, {{ section.settings.overlay_opacity | divided_by: 100.0 }}));
    z-index: 1;
  }
  
  .shopify-section .banner-container .banner h1 {
    color: #ffffff;
    text-shadow: 2px 2px 8px rgba(0,0,0,0.6);
    font-size: 2.5rem;
    font-weight: 700;
    position: relative;
    z-index: 2;
  }
  
  /* Tablet responsiveness */
  @media (max-width: 768px) {
    .shopify-section .banner-container .banner {
      height: 300px !important;
    }
    
    .shopify-section .banner-container .banner h1 {
      font-size: 1.8rem;
    }
  }
  
  /* Mobile responsiveness */
  @media (max-width: 480px) {
    .shopify-section .banner-container {
      padding: 0 10px;
    }
    
    .shopify-section .banner-container .banner {
      height: auto !important;
      min-height: 150px !important;
      max-height: 250px !important;
      border-radius: 16px;
      aspect-ratio: 16/9;
    }
    
    .shopify-section .banner-container .banner-image {
      position: relative !important;
      width: 100% !important;
      height: 100% !important;
      object-fit: contain !important;
      object-position: center center;
    }
    
    .shopify-section .banner-container .banner-overlay {
      display: none; /* Hide overlay on mobile for better visibility */
    }
    
    .shopify-section .banner-container .banner h1 {
      font-size: 1.2rem;
      padding: 0 1rem;
      position: absolute;
      bottom: 10px;
      left: 0;
      right: 0;
      text-align: center;
      background: rgba(15, 23, 42, 0.8);
      padding: 0.5rem;
      margin: 0;
    }
  }
  
  /* Extra small mobile devices */
  @media (max-width: 360px) {
    .shopify-section .banner-container .banner {
      height: 150px !important;
    }
    
    .shopify-section .banner-container .banner h1 {
      font-size: 1rem;
    }
  }
</style>
